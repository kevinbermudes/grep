<zk xmlns="http://www.zkoss.org/2005/zul">
    <window title="Usuarios" border="normal" apply="com.example.grep.controllers.UsuarioViewModel">
        <listbox id="usuarios" width="100%" rows="8" emptyMessage="No users found">
            <listhead>
                <listheader label="ID" />
                <listheader label="Nombre" />
                <listheader label="ContraseÃ±a" />
            </listhead>
            <template name="model">
                <listitem>
                    <listcell label="${each.idUsuario}" />
                    <listcell label="${each.nombreUsuario}" />
                    <listcell label="${each.password}" />
                </listitem>
            </template>
        </listbox>
        <textbox id="nombreUsuario" placeholder="Nuevo usuario" />
        <button label="Agregar Usuario" onClick='${usuarioViewModel.agregarUsuario(nombreUsuario.value)}' />
    </window>
</zk>

